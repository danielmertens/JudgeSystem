@{
    ViewData["Title"] = "Add input";
}

<div class="container">
    <div class="card">
        <form asp-controller="Admin" asp-action="AddInput" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label for="nameInput" id="nameLabel">Enter a file name:</label>
                <input id="nameInput" name="name" type="text" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="fileInput" id="nameLabel">Select a file:</label>
                <input id="fileInput" name="file" type="file" class="form-control" required />
            </div>

            <input type="submit" value="Add" />
        </form>

        @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }
    </div>
</div>

