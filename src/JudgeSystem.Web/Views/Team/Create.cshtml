@{
    ViewData["Title"] = "Create team";
}

<div class="container">
    <div class="card">
        <form asp-controller="Team" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <label for="teamNameInput" id="teamNameLabel">Enter a team name:</label>
            <input id="teamNameInput" name="TeamName" type="text" class="form-control" required/>
            <input type="submit" value="Create" />
        </form>

        @if (!string.IsNullOrWhiteSpace(ViewBag.Error)) { 
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
