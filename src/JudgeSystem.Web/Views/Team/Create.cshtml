@{
    ViewData["Title"] = "Create team";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-controller="Team" asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="teamNameInput" id="teamNameLabel">Enter a team name:</label>
                    <input id="teamNameInput" name="TeamName" type="text" class="form-control" required/>
                </div>

                <input type="submit" value="Create team" class="btn btn-primary" />
            </form>

            @if (!string.IsNullOrWhiteSpace(ViewBag.Error)) { 
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

        </div>
    </div>
</div>
